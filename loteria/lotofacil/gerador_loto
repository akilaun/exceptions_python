from func_loto import encontrar_numeros_mais_repetem, encontrar_numeros_menos_repetem, encontrar_numeros_nao_repetem
import csv
import random

base_loto = []

with open('resultado_loto.csv', 'r') as csvfile:
    reader = csv.reader(csvfile, delimiter=';')
    for row in reader:
        try:
            vector = [int(num) for num in row]
            base_loto.append(vector)
        except ValueError:
            print("Erro ao ler vetor:", row)

quantidade_numeros = 15
quantidade_apostas = 1
mais_repetem = encontrar_numeros_mais_repetem(base_loto,quantidade_numeros)
menos_repetem = encontrar_numeros_menos_repetem(base_loto,quantidade_numeros)
nao_repetem = encontrar_numeros_nao_repetem(base_loto)

#Gerar apostas 
aposta1 = []
while len(aposta1) < quantidade_apostas:
    numeros_par = random.sample(range(2, 25, 2), 5)
    numeros_impar = random.sample(range(1, 25, 2), 10)
    novas_apostas = numeros_par + numeros_impar
    if novas_apostas not in base_loto and novas_apostas not in aposta1:
        aposta1.append(novas_apostas)

aposta2 = []
while len(aposta2) < quantidade_apostas:
    numeros_par = random.sample(range(2, 25, 2), 7)
    numeros_impar = random.sample(range(1, 25, 2), 8)
    novas_apostas = numeros_par + numeros_impar
    if novas_apostas not in base_loto and novas_apostas not in aposta2:
        aposta2.append(novas_apostas)  

aposta3 = []
while len(aposta3) < quantidade_apostas:
    numeros_par = random.sample(range(2, 25, 2), 10)
    numeros_impar = random.sample(range(1, 25, 2), 5)
    novas_apostas = numeros_par + numeros_impar
    if novas_apostas not in base_loto and novas_apostas not in aposta3:
        aposta3.append(novas_apostas)  

aposta4 = []
while len(aposta4) < quantidade_apostas:
    numeros_par = random.sample(range(2, 25, 2), 8)
    numeros_impar = random.sample(range(1, 25, 2), 7)
    novas_apostas = numeros_par + numeros_impar
    if novas_apostas not in base_loto and novas_apostas not in aposta4:
        aposta4.append(novas_apostas)  



#Printa as apostas
print(f"\n\n{quantidade_apostas+3} Apostas para ganhar:\n")
for vector in aposta1:
    print(vector)
for vector in aposta2:
    print(vector)
for vector in aposta3:
    print(vector)
for vector in aposta4:
    print(vector)
print("\n")
